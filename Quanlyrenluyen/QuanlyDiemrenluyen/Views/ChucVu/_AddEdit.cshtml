@model QuanlyDiemrenluyen.Models.ChucVu

<form name="userForm" action="ChucVu/AddOrEdit" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="modal-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h4 id="TT" class="modal-title"></h4><br />
        @Html.HiddenFor(model => model.ChucVuId)
        <div class="row">

            <div class="mb-3">
                <label class="form-label">Tên chức vụ</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.TenChucVu, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.TenChucVu, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">Loại chức vụ</label>
                <div class="col-md-12">
                    <select class="form-select" id="Loai" name="Loai" required>
                        <option value="false">Sinh viên</option>
                        <option value="true">Giảng viên</option>
                    </select>
                </div>
            </div>
            <div class="mb-0">
                <div class="modal-footer">
                    <button type="button" onclick="CreateOrUpdate()" class="btn btn-primary waves-effect waves-light me-1">Lưu</button>&nbsp;
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>

        </div>
    </div>
</form>

<script>
    if (@Model.ChucVuId> 0) {
        $("#TT").html('Cập nhật');
    } else {
        $("#TT").html("Thêm mới");
    }
</script>


