
@model QuanlyDiemrenluyen.Models.Quyen

<form name="userForm" action="Quyen/AddOrEdit" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <h4 id="TT" class="modal-title">
        </h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaQuyen)
        <div class="row">
            <div class="col-md-12">
                <div class="mb-3">
                    <label class="form-label">Tên quyền</label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.TenQuyen, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.TenQuyen, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Mô tả</label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="mb-3">
                    <div class="modal-footer">
                        <button type="button" onclick="CreateOrUpdate()" class="btn btn-primary ">Lưu</button>&nbsp;
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Đóng</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

<script>
    if (@Model.MaQuyen > 0) {
        $("#TT").html('Sửa');
    } else {
        $("#TT").html("Thêm mới");
    }

</script>
