@model QuanlyDiemrenluyen.Models.Lop

<form name="userForm" action="Lop/AddOrEdit" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <h4 id="TT" class="modal-title"></h4><br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaLop)
        <div class="row">

            <div class="mb-3">
                <label class="form-label">Tên lớp</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.TenLop, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.TenLop, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">Tên khoa</label>
                <div class="col-md-12">
                    @Html.DropDownList("MaKhoa", (IEnumerable<SelectListItem>)ViewBag.khoas, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(model => model.MaKhoa, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="mb-0">
                <div class="modal-footer">
                    <button type="button" onclick="CreateOrUpdate()" class="btn btn-primary waves-effect waves-light me-1">Lưu</button>&nbsp;
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>

        </div>
    </div>
</form>

<script>
    if (@Model.MaLop> 0) {
        $("#TT").html('Cập nhật');
    } else {
        $("#TT").html("Thêm mới");
    }

</script>
